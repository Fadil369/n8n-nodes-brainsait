# BrainSAIT N8N Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# N8N Configuration
# ==============================================
N8N_HOST=n8n.brainsait.com
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_USER=admin
N8N_PASSWORD=change-me-secure-password
N8N_ENCRYPTION_KEY=change-me-to-long-random-string

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=brainsait
POSTGRES_USER=brainsait_admin
POSTGRES_PASSWORD=change-me-secure-db-password
POSTGRES_SSL=true
POSTGRES_CREDENTIAL_ID=postgres-credential-uuid

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-me-secure-redis-password
REDIS_DB=0
REDIS_TLS=true

# ==============================================
# Agent Service URLs
# ==============================================
HEALTHCARE_AGENT_URL=https://healthcare-agent.brainsait.com/api/v1
CLINICAL_AGENT_URL=https://clinical-agent.brainsait.com/api/v1
TRANSLATION_AGENT_URL=https://translation-agent.brainsait.com/api/v1
COMPLIANCE_AGENT_URL=https://compliance-agent.brainsait.com/api/v1
DIAGNOSTIC_SERVICE_URL=https://diagnostic.brainsait.com/api/v1

# ==============================================
# AI Configuration
# ==============================================
ANTHROPIC_API_KEY=sk-ant-api-xxx
ANTHROPIC_API_CREDENTIAL_ID=anthropic-credential-uuid
OPENAI_API_KEY=sk-xxx
OPENAI_API_CREDENTIAL_ID=openai-credential-uuid

# ==============================================
# Authentication & Security
# ==============================================
AGENT_AUTH_CREDENTIAL_ID=agent-auth-uuid
AGENT_API_KEY=change-me-secure-agent-key
JWT_SECRET=change-me-secure-jwt-secret
ENCRYPTION_KEY=change-me-secure-encryption-key
SESSION_SECRET=change-me-secure-session-secret

# ==============================================
# NPHIES Integration
# ==============================================
NPHIES_API_URL=https://nphies.sa.gov/api/v2
NPHIES_AUTH_CREDENTIAL_ID=nphies-credential-uuid
NPHIES_PROVIDER_LICENSE=LIC-SA-XXXX-YYYY
NPHIES_FACILITY_ID=FAC-RIYADH-001
NPHIES_API_KEY=change-me-nphies-api-key

# ==============================================
# Diagnostic Services
# ==============================================
DIAGNOSTIC_SERVICE_AUTH_ID=diagnostic-auth-uuid
PACS_SERVER_URL=https://pacs.brainsait.com
LIS_SERVER_URL=https://lis.brainsait.com

# ==============================================
# Notification Services
# ==============================================
SLACK_API_CREDENTIAL_ID=slack-credential-uuid
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
COMPLIANCE_ALERT_CHANNEL_ID=C07XXXXXXXX
SECURITY_ALERT_CHANNEL_ID=C07YYYYYYYY
SYSTEM_ALERTS_CHANNEL_ID=C07ZZZZZZZZ
CLINICAL_ALERTS_CHANNEL_ID=C07AAAAAAAA

# ==============================================
# Email Configuration
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@brainsait.com
SMTP_PASSWORD=change-me-smtp-password
SMTP_FROM=BrainSAIT System <notifications@brainsait.com>
SMTP_CREDENTIAL_ID=smtp-credential-uuid

# ==============================================
# AWS Configuration
# ==============================================
AWS_ACCESS_KEY_ID=AKIAXXXXX
AWS_SECRET_ACCESS_KEY=change-me-aws-secret
AWS_REGION=me-south-1
S3_BUCKET_NAME=brainsait-hipaa-storage
S3_ENCRYPTION=AES256

# ==============================================
# Monitoring & Logging
# ==============================================
SENTRY_DSN=https://xxx@sentry.io/xxx
LOG_LEVEL=info
ERROR_WORKFLOW_ID=error-handler-workflow-uuid

# ==============================================
# CORS Configuration
# ==============================================
ALLOWED_ORIGINS=https://app.brainsait.com,https://admin.brainsait.com,https://provider.brainsait.com

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==============================================
# Session Configuration
# ==============================================
SESSION_TIMEOUT=3600000

# ==============================================
# Compliance & Audit
# ==============================================
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_REPORT_SCHEDULE="0 0 * * 0"
HIPAA_AUDIT_ENABLED=true
NPHIES_AUDIT_ENABLED=true

# ==============================================
# Feature Flags
# ==============================================
ENABLE_AI_CLINICAL_SUPPORT=true
ENABLE_REAL_TIME_TRANSLATION=true
ENABLE_AUTOMATED_COMPLIANCE=true
ENABLE_NPHIES_INTEGRATION=true
ENABLE_DIAGNOSTIC_ORDERS=true

# ==============================================
# Localization
# ==============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar
DEFAULT_TIMEZONE=Asia/Riyadh
RTL_ENABLED=true

# ==============================================
# Performance
# ==============================================
MAX_CONCURRENT_WORKFLOWS=50
WORKFLOW_TIMEOUT=300000
DATABASE_POOL_SIZE=20
CACHE_TTL=3600

# ==============================================
# Development/Staging Flags
# ==============================================
DEBUG_MODE=false
ENABLE_MOCK_NPHIES=false
SKIP_ENCRYPTION_TEST=false
